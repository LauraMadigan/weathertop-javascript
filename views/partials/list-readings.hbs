{{> latest-readings station }}

<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Time of Reading</th>
      <th>Weather Code</th>
      <th>Temperature (Â°C)</th>
      <th>Wind (km/h)</th>
      <th>Wind Direction</th>
      <th>Pressure (hPa)</th>
      <th>Delete Reading</th>
    </tr>
  </thead>
  <tbody>
    {{#each station.readings}}
    <tr>
      <td>
        {{dateFormat timeStamp "MMM Do YYYY, h:mm:ss a"}}
      </td>
      <td>
        {{code}}
      </td>
      <td>
        {{temp}}
      </td>
      <td>
        {{windSpeed}}
      </td>
      <td>
        {{windDirection}}
      </td>
      <td>
        {{pressure}}
      </td>
      <td>
        <a href="/station/{{../station._id}}/deletereading/{{_id}}"><span class="icon has-text-danger"><i class="fas fa-trash"></i>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
