<form class="box" action="/station/{{station._id}}/addreading" method="POST">
  <label>Enter a manual reading:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <label>Weather Code</label>
        <input class="input" placeholder="100" type="number" min="100" max="800" name="code">
      </div>
      <div class="field">
        <label>Temperature</label>
        <input class="input" placeholder="15Â°C" type="number" step="0.01" min="-50" max="60" name="temp">
      </div>
      <div class="field">
        <label>Wind Speed</label>
        <input class="input" placeholder="20kmph" type="number" step="0.01" min="0" max="500" name="windSpeed">
      </div>
      <div class="field">
        <label>Wind Direction</label>
        <input class="input" placeholder="90" type="number" step="0.01" min="0" max="259.99" name="windDirection">
      </div>
      <div class="field">
        <label>Pressure</label>
        <input class="input" placeholder="1000 hPa" type="number" min="0" max="1100" name="pressure">
      </div>
    </div>
  </div>
  <button class="button is-primary">Add Manual Reading</button>
</form>

